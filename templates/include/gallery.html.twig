<!-- GALLERY-1 -->
<section id="gallery-1" class="wide-600 inner-page-hero gallery-section division">
    <div class="container">
        <!-- SECTION TITLE -->
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">
                <div class="section-title title-01 mb-70">
                    <!-- Section ID -->
                    <span class="section-id">Nails And Beyondâ€¦</span>
                    <!-- Title -->
                    <h2 class="h2-lg">Stop Time. Stay Beautiful</h2>
                </div>
            </div>
        </div>

        <!-- GALLERY IMAGES HOLDER -->
        <div class="row">
            {% if images is defined %}
                {% for image in images %}
                    <div class="col-md-4 gallery-items-list d-flex mb-4">
                        <div class="masonry-wrap grid-loaded text-center w-100">
                            <!-- IMAGE #1 -->
                            <div class="masonry-image w-100">
                                <a class="image-link" href="{{ asset('/gallery/images/' ~image.image~ '') }}">
                                    <div class="hover-overlay">
                                        <!-- Image -->
                                        <img class="img-fluid" src="{{ asset('/gallery/images/' ~image.image~ '') }}" alt="gallery-image"/>
                                        <div class="item-overlay"></div>
                                        <!-- Image Description -->
                                        <div class="image-description white--color">
                                            <div class="image-caption">
                                                <p class="txt-upcase">{{ image.text }}</p>
                                                <h5 class="h5-xl">{{ image.title }}</h5>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>

                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
        <!-- END GALLERY IMAGES HOLDER -->
        <!-- BUTTON -->
        <div class="row">
            <div class="col">
                <div class="more-btn mt-40">
                    <a href="#" class="btn tra-grey--btn rose--hover ico-15">
                        <span class="flaticon-instagram"></span> Visit Our Instagram
                    </a>
                </div>
            </div>
        </div>    <!-- END BUTTON -->
    </div>       <!-- End container -->
</section>    <!-- END GALLERY-1 -->